_configure() {
	mkdir -v build
	cd build

	../configure				\
		--prefix=/usr			\
		--build=$(../config.guess)	\
		--host=${TARGET}		\
		--disable-nls			\
		--enable-shared			\
		--disable-werror		\
		--enable-64-bit-bfd
		
}

_build() {
	cd ${CURWORKDIR}/build

	make -j${THREADS}
}

_install() {
	cd ${CURWORKDIR}/build

	make DESTDIR=${OS} install
}
