_configure() {
	ln -s gthr-posix.h libgcc/gthr-default.h

	mkdir -v build
	cd build

	OPT_CXXFLAGS="-g -O2 -D_GNU_SOURCE"
	oconfigcmd ../libstdc++-v3		\
		--prefix=/usr			\
		--disable-multilib		\
		--disable-nls			\
		--disable-libstdcxx-pch
}

_build() {
	cd ${CURWORKDIR}/build

	make -j${THREADS}
}

_install() {
	cd ${CURWORKDIR}/build

	make install
}
