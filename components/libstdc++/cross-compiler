_configure() {
	mkdir -v build
	cd build

	../libstdc++-v3/configure		\
		--host=${TARGET}		\
		--build=$(../config.guess)	\
		--prefix=/usr			\
		--disable-multilib		\
		--disable-nls			\
		--disable-libmpx		\
		--disable-libstdcxx-pch		\
		--with-gxx-include-dir=/tools/${TARGET}/include/c++/${version}
}

_build() {
	cd ${CURWORKDIR}/build

	make -j${THREADS}
}

_install() {
	cd ${CURWORKDIR}/build

	make DESTDIR=${OS} install
}
